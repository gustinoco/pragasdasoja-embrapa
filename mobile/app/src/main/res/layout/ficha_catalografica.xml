<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="12dp">

    <!-- HEADER -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="24dp"
        android:paddingRight="24dp">
        <TextView
            style="@style/h1"
            android:text="Todos os direitos reservados."
            android:layout_gravity="center"
            android:gravity="center"/>
        <TextView
            style="@style/p"
            android:text="A reprodução não autorizada desta publicação,  no todo ou em parte, constitui violação dos direitos autorais (Lei Nº9.610). "
            android:layout_gravity="center"
            android:gravity="center"/>
        <TextView
            style="@style/h1"
            android:layout_marginTop="5dp"
            android:text="Dados Internacionais de Catalogação na Publicação (CIP)"
            android:layout_gravity="center"
            android:gravity="center"/>
        <TextView
            style="@style/p"
            android:text="Embrapa Agropecuária do Oeste"
            android:layout_gravity="center"
            android:gravity="center"/>
    </LinearLayout>

    <View
        android:layout_margin="14dp"
        android:background="#555"
        style="@style/Line"
        />
    <!-- BODY -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="18dp"
        android:paddingRight="18dp">
        <TextView
            style="@style/p"
            android:text="Ávila,  Crébio José"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            style="@style/p"
            android:text="\t\tPragas da soja, conheça e previna-se \ Crébio José Ávila. - Dourados, MS:
\t\tEmbrapa Agropecuária Oeste, 2015."/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginLeft="20dp"
            style="@style/p"
            android:text="Aplicativo para celular.
Sistema requerido: Android 4.0 ou superior.\nModo de acesso: World Wide Web.\nTítulo da tela\nAplicativo desenvolvido por Juarez Arce Franco Junior"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            style="@style/p"
            android:text="\t\t1. Soja - Praga de planta. 2. Inseto - Praga de planta - Soja. I. Embrapa Agropecuária Oeste. Título."/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <View
        android:layout_margin="14dp"
        android:background="#555"
        style="@style/Line"
        />

</LinearLayout>
</ScrollView>