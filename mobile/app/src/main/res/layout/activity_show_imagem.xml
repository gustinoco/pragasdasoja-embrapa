<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF">
    <include layout="@layout/actionbar_custom_transparent"/>

    <br.embrapa.cpao.pragas.widget.TouchImageView
        android:id="@+id/img"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

    <LinearLayout
        android:id="@+id/ll_credito"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="14dp"
        android:background="#382a3038"
        android:layout_marginBottom="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingRight="12dp"
        android:paddingLeft="12dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_descricao_foto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#dce2e7"
            android:textSize="20sp"
            android:textStyle="italic"
            android:text="descricao da foto "
            />
        <TextView
            android:id="@+id/tv_fotografo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#dce2e7"
            android:padding="0dp"
            android:textSize="20sp"
            android:text="nome do fotÃ³grafo"
            />

    </LinearLayout>

</RelativeLayout>
